<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<p><%= @task.completed %></p>


<%= link_to "Edit #{@task.title}",
            edit_path(@task),
            method: :edit %>


<%= link_to "Delete #{@task.title}",
            delete_path(@task),
            data: { turbo_method: :delete } %>
